{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "noEmit": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "target": "ESNext",
    "types": [
      "node",
      "@octokit/rest",
      "@octokit/graphql"
    ]
  },
  "include": ["**/*.mjs"],
  "exclude": ["node_modules", "dist", "**/*.test.mjs"]
}